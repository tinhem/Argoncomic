<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_rcv_truyendadoc">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/new1"
            android:id="@+id/img_truyendadoc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tentruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:padding="5dp"
                android:text="Tên Truyện"
                android:layout_marginLeft="12dp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tv_chapterdangxem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:padding="1dp"
                android:gravity="left"
                android:text="Chapter đang xem: Chapter 1"/>
            <TextView
                android:id="@+id/tv_chaptermoinhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:padding="1dp"
                android:gravity="left"
                android:text="Chapter mới nhất: Chapter 3"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>