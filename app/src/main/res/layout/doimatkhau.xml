<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/img_dmk_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logox"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textColor="@color/green"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edt_dmk_mkht"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Mật khẩu hiện tại (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>

    <EditText
        android:id="@+id/edt_dmk_mkm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Mật khẩu mới (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>
    <EditText
        android:id="@+id/edt_dmk_nlmk"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Nhập lại mật khẩu mới (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
    <Button
        android:id="@+id/bt_xndmk"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:text="Xác nhận"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"/>
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/bt_huy"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:text="Hủy"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>