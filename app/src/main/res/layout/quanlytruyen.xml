<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý truyện"
        android:textSize="26dp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/img_newtruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_new"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_themtruyen"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Thêm truyện"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:text="Tên truyện"/>
                <EditText
                    android:layout_marginLeft="50dp"
                    android:id="@+id/edt_tentruyen_newtruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="Tên truyện (*)"
                    android:textSize="14dp"
                    android:drawableTint="@color/green"
                    android:background="@drawable/khung"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:text="Tác giả"/>
                <EditText
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/edt_tg_newtruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Tác giả (*)"
                    android:textSize="14dp"
                    android:drawableTint="@color/green"
                    android:background="@drawable/khung"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:text="Thể loại"/>
                <EditText
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/edt_theloai_newtruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Thể loại (*)"
                    android:textSize="14dp"
                    android:drawableTint="@color/green"
                    android:background="@drawable/khung"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"/>
                <EditText
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/edt_mota_newtruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Mô tả (*)"
                    android:textSize="14dp"
                    android:drawableTint="@color/green"
                    android:background="@drawable/khung"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Link ảnh"/>
                <EditText
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/edt_linkanh_newtruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Link ảnh (*)"
                    android:textSize="14dp"
                    android:drawableTint="@color/green"
                    android:background="@drawable/khung"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/bt_them_newtruyen"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:text="Thêm"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bt_huy_newtruyen"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:text="Hủy"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="16dp" />

        <TextView
            android:layout_width="350dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tên truyện"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_quanlytruyen"/>
        </ScrollView>
    </LinearLayout>


</LinearLayout>