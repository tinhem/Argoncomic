<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/imgv_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logox"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:textColor="@color/green"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edt_dk_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/account"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>

    <EditText
        android:id="@+id/edt_dk_pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Mật khẩu (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>
    <EditText
        android:id="@+id/edt_dk_nlpass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Nhập lại mật khẩu (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>

    <Button
        android:id="@+id/bt_dk"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Đăng Ký"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textAllCaps="false"/>
    <RadioButton
        android:id="@+id/rb_check"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Tôi đồng ý với các điều khoản sử dụng"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_cotk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã có tài khoản?"
        android:textSize="14dp"
        android:textStyle="italic"
        android:textColor="@color/green"
        android:layout_marginTop="10dp"/>

</LinearLayout>