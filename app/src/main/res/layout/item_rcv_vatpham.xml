<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_rcv_theloai"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/new1"
            android:id="@+id/img_vatpham"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_tenvatpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:padding="5dp"
                android:text="Avatar Girl 1"
                android:layout_marginLeft="12dp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tv_diem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginLeft="12dp"
                android:padding="1dp"
                android:gravity="left"
                android:text="Điểm: 100"/>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/bt_doivatpham"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/khung"
                android:gravity="center"
                android:text="Đổi"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>