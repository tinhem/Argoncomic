<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/imgv_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logox"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã OTP đã được gửi về Email:"
        android:textColor="@color/green"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_emailxn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/green"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có thể nhận lại OTP"
            android:textColor="@color/green"
            android:textSize="14dp"
            android:textStyle="normal"
            android:layout_marginStart="35dp" />
        <Button
            android:id="@+id/bt_glmxn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Nhận lại OTTP"
            android:background="@drawable/khung"
            android:textColor="@color/green"
            android:textSize="14dp"
            android:layout_marginHorizontal="45dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_maopt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/green"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Nhập mã OTP (*)"
        android:textSize="14dp"
        android:maxLength="6"
        android:drawableLeft="@drawable/account"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>

    <EditText
        android:id="@+id/edt_mkm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Mật khẩu mới (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>
    <EditText
        android:id="@+id/edt_nlmkm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Nhập lại mật khẩu mới (*)"
        android:textSize="14dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@color/green"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:background="@drawable/khung"/>

    <Button
        android:id="@+id/bt_xnmkm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Xác Nhận"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textAllCaps="false"/>
</LinearLayout>